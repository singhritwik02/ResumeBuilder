<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/pqri_TopLayout"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:weightSum="2"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QR Resume"
                    android:fontFamily="@font/quicksand_semibold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:src="@drawable/qr_code_image"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pqri_TopLayout"
                app:layout_constraintBottom_toTopOf="@id/pqri_ContinueButton"
                android:layout_margin="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advantages of having a QR Resume"
                    android:fontFamily="@font/quicksand_semibold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_margin="8dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Less Sharing time."
                    android:fontFamily="@font/quicksand_regular"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_margin="8dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Single QR to share everywhere."
                    android:fontFamily="@font/quicksand_regular"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_margin="8dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Would definitely make your resume stand out.."
                    android:fontFamily="@font/quicksand_regular"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_margin="8dp"

                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/pqri_ContinueButton"
                android:fontFamily="@font/quicksand_semibold"
                android:textColor="@color/darkOrange"
                android:padding="16dp"
                android:layout_margin="8dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>