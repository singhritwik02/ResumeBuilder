<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        android:elevation="8dp"
        android:padding="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layoutAnimation="@anim/basic_layout_animation"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sure to delete $title"
                android:fontFamily="@font/quicksand_regular"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:id="@+id/pdc_ConfirmationText"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:textSize="18sp"
                    android:fontFamily="@font/quicksand_bold"
                    android:textAlignment="center"
                    android:padding="16dp"
                    android:textColor="#EE6C4D"
                    android:id="@+id/pdc_DeleteButton"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textColor="@color/lightBlue"
                    android:textSize="18sp"
                    android:fontFamily="@font/quicksand_bold"
                    android:textAlignment="center"
                    android:padding="16dp"
                    android:id="@+id/pdc_CancelButton"
                    />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>