<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.EducationDetailsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="30"
        android:background="@drawable/orange_background"
        android:id="@+id/fed_TopLayout"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:text="Education"
            android:fontFamily="@font/nunito_bold"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:transitionName="transition_Title"
            android:layout_marginStart="16dp"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/school_image"
            android:layout_weight="40"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:transitionName="transition_Image"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Long press an item to delete"
            android:fontFamily="@font/quicksand_medium"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/fed_LongPressLabel"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_icon"
            android:layout_margin="16dp"
            android:layout_gravity="end"
            android:id="@+id/fed_AddButton"
            app:tint="@color/darkOrange" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fed_RecyclerView"
            android:layout_width="match_parent"
            android:layoutAnimation="@anim/basic_layout_animation"
            android:layout_height="wrap_content"
            android:background="?android:windowBackground" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/fed_EmptyLayout"
            android:layout_gravity="center"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty_view_image"
                android:layout_gravity="center"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"
                android:text="Nothing Here"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
        </LinearLayout>


    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        >
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fed_BottomBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            android:layout_gravity="center"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:adUnitId="ca-app-pub-7757208400023961/8393930807">
        </com.google.android.gms.ads.AdView>
    </FrameLayout>

</LinearLayout>