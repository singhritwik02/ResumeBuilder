<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layoutAnimation="@anim/basic_layout_animation"
            android:layout_margin="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Certification Title"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/black"
                android:layout_marginStart="12dp"
                android:textSize="18dp"
                android:background="@color/white"
                android:padding="4dp"
                android:id="@+id/sc_CertificationTitle"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Certification Time"
                android:fontFamily="@font/quicksand_regular"
                android:textColor="@color/black"
                android:layout_marginStart="12dp"
                android:padding="4dp"
                android:background="@color/white"
                android:textStyle="italic"
                android:id="@+id/sc_CertificationTime"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Certification Description"
                android:fontFamily="@font/quicksand_regular"
                android:textColor="@color/black"
                android:padding="4dp"
                android:textSize="16dp"
                android:background="@color/white"
                android:layout_marginStart="12dp"
                android:id="@+id/sc_CertificationDescription"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>